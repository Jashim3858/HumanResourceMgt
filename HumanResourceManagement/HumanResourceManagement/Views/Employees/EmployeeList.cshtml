

@{
    ViewBag.Title = "EmployeeList";
}

<h2>Employee List</h2>
<hr />
<div>
    @foreach (var item in Model)
    {
        <div>
            <div style="float:left; display:inline-block;height:300px; border-top:2px solid white;">
                <a href='@Url.Action("AddNewEmployee","Employees" , new { id = item.EmployeeName })'>
                    <img src="~/AppFile/Images/@item.PicUrl" height="300" width="400" />
                </a>
            </div>
            <div style="float:left; display:inline-block; width:64.5%; height:300px;border-top:2px solid white;padding-left:15px; background-color:lavender;">
                <h2><a href='@Url.Action("AddNewEmployee","Employees", new { id = item.HotelName })'>@item.EmployeeName</a></h2>
                @*<label>@item.Details</label>*@
            </div>
            <hr />
        </div>
    }
</div>